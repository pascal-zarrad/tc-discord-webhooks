<teamcity-plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:schemas-jetbrains-com:teamcity-plugin-v1-xml">
    <info>
        <name>tc-discord-webhooks</name>
        <display-name>TC Discord WebHooks</display-name>
        <version>@Version@</version>
        <description>A TeamCity plugin that allows the easy creation of Discord WebHooks that are used to notify users
            on a Discord server about the current state of builds.
        </description>
        <download-url>https://plugins.jetbrains.com/plugin/12608-tc-discord-webhooks</download-url>
        <email>contact@pascal-zarrad.de</email>
        <vendor>
            <name>@VendorName@</name>
            <url>@VendorURL@</url>
            <logo>https://raw.githubusercontent.com/pascal-zarrad/tc-discord-webhooks/develop/.github/tcdiscordwebhooks-logo-1024.png</logo>
        </vendor>
    </info>
    <deployment use-separate-classloader="true"/>
</teamcity-plugin>
